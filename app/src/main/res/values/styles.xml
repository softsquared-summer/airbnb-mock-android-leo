<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        //status color
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- splash theme-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Experience theme-->
    <style name="AppTheme.TransparentTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--Basic text style-->

    <style name="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BasicText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FragTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>


    <!--Register text style-->
    <style name="RegisterEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="RegisterTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="RegisterBasicText">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- frag profile-->

    <style name="FragProfileTitleText">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="FragProfileBasicText">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FragProfileIV">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- profile text-->
    <style name="ProfileTitleText">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <style name="ProfileBasicText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- profile modify-->
    <style name="ProfileModifyTitleText">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ProfileModifyEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ProfileModifyBasicText">
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!-- frag search text style-->


    <style name="FragSearchTitleText">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FragSearchBasicText">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!--house text-->


    <style name="HouseHeadText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HouseTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="HouseBasicText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HousefaclityText">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HouseDotText">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">8sp</item>
    </style>

    <!-- experience text-->
    <style name="ExperienceBasicWhiteText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExperienceGrayText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ExperienceBasicText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExperienceTitleText">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- btn style-->

    <style name="SearchButton">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">65dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <!-- 바텀 네비게이션바 글씨 크기 조정 -->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.Inactive
        </item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />

    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
