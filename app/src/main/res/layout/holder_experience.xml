<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="167dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_frag_search_holder_experience"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:roundedCornerRadius="5dp" />

    <TextView
        android:id="@+id/tv_frag_search_holder_experience_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_frag_search_holder_experience_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="제목 : 이탈리아 할머니에게 직접 배우는 파스타"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_frag_search_holder_experience_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="가격 : 1인당 \부터"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_frag_search_holder_experience_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★ 4.99"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_frag_search_holder_review_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1065)" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_frag_search_holder_experience_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="교통편, 음식, 음료 포함"
        android:textSize="12sp" />


</LinearLayout>