<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_frag_search_continue_look_around"
    android:layout_width="145dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/search_continue_look_around_frag_search" />

        <TextView
            android:id="@+id/tv_search_frag_continue_look_around_title"
            android:layout_marginTop="2dp"
            style="@style/BasicText"
            android:text="한국" />

        <TextView
            android:id="@+id/tv_search_frag_continue_look_around_content"
            android:layout_marginTop="2dp"
            style="@style/BasicText"
            android:textSize="12sp"
            android:text="숙소 및 체험" />
    </LinearLayout>

</androidx.cardview.widget.CardView>